#include <iostream>
#include <cmath> // Для використання pow та exp
#include <iomanip> // Для форматування виводу

int main() {
    double x;
    double f_x;

    std::cout << "Введіть значення x: ";
    std::cin >> x;

    if (x >= -2 && x <= 2) {
        // Випадок 1: -2 <= x <= 2
        f_x = pow(x, 2); // x^2
        std::cout << "Оскільки " << x << " знаходиться в діапазоні [-2; 2], використовується формула f(x) = x^2." << std::endl;
    } else {
        // Випадок 2: x < -2 або x > 2
        f_x = 4.0 * exp(x); // 4 * e^x
        std::cout << "Оскільки " << x << " знаходиться поза діапазоном [-2; 2], використовується формула f(x) = 4 * e^x." << std::endl;
    }

    std::cout << std::fixed << std::setprecision(4); // Встановлення точності
    std::cout << "Значення функції f(" << x << ") = " << f_x << std::endl;

    return 0;
}
