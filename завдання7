#include <iostream>

int main() {
    double a, b, c;

    std::cout << "Введіть довжину сторони a: ";
    std::cin >> a;
    std::cout << "Введіть довжину сторони b: ";
    std::cin >> b;
    std::cout << "Введіть довжину сторони c: ";
    std::cin >> c;

    // 1. Перевірка на додатність сторін
    bool positive_sides = (a > 0 && b > 0 && c > 0);

    // 2. Перевірка нерівності трикутника
    bool triangle_inequality = (a + b > c) && (a + c > b) && (b + c > a);

    std::cout << "\nПеревірка твердження \"існує трикутник з довжинами сторін " << a << ", " << b << ", " << c << "\":" << std::endl;

    if (positive_sides && triangle_inequality) {
        std::cout << "Твердження ІСТИННЕ: Трикутник з такими сторонами існує." << std::endl;
    } else {
        std::cout << "Твердження ХИБНЕ: Трикутник з такими сторонами НЕ існує." << std::endl;
        
        if (!positive_sides) {
            std::cout << "Причина: Довжини сторін мають бути додатними." << std::endl;
        } else {
            std::cout << "Причина: Не виконується нерівність трикутника (сума двох сторін має бути більша за третю)." << std::endl;
        }
    }

    return 0;
}
