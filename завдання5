#include <iostream>

int main() {
    double a, b, c;

    std::cout << "Введіть довжину сторони a: ";
    std::cin >> a;
    std::cout << "Введіть довжину сторони b: ";
    std::cin >> b;
    std::cout << "Введіть довжину сторони c: ";
    std::cin >> c;

    // Перевірка на існування трикутника (нерівність трикутника)
    if (a <= 0 || b <= 0 || c <= 0 || a + b <= c || a + c <= b || b + c <= a) {
        std::cout << "Трикутник з такими сторонами не існує або сторони некоректні (недодатні)." << std::endl;
    } else {
        // Визначення виду трикутника
        if (a == b && b == c) {
            std::cout << "Це рівносторонній трикутник." << std::endl;
        } else if (a == b || a == c || b == c) {
            std::cout << "Це рівнобедрений трикутник." << std::endl;
        } else {
            std::cout << "Це довільний трикутник." << std::endl;
        }
    }

    return 0;
}
